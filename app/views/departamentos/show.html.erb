<p style="color: green"><%= notice %></p>

<%= render @departamento %>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Departamento</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="2">
        </tr>
    </thead>
    <tbody>
        <%= render @produtos_por_departamento %>
    </tbody>
</table>

<div>
  <%= link_to "Editar departamento", edit_departamento_path(@departamento) %> |
  <%= link_to "Voltar para departamentos", departamentos_path %>

  <%= button_to "Deletar departamento", @departamento, method: :delete, class:"btn btn-danger" %>
</div>
